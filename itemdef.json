{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "appid": {
      "$ref": "#/$defs/appid"
    },
    "auto_stack": {
      "type": "boolean",
      "description": "If true, item grants will automatically be added to a single stack of the given type. Grants will be visible in inventory callbacks as quantity changes. Defaults to false."
    },
    "background_color": {
      "$ref": "#/$defs/color",
      "description": "The color to display in the inventory background as 6 hex digits."
    },
    "bundle": {
      "type": "string",
      "description": "See https://partner.steamgames.com/doc/features/inventory/schema#SpecifyBundles",
      "pattern": "^(\\d+(?:x\\d+)?;?)+$"
    },
    "drop_interval": {
      "type": "number",
      "description": "Playtime in minutes before the item can be granted to the user.",
      "minimum": 0
    },
    "drop_limit": {
      "type": "number",
      "description": "Limits for a specific user the number of times this item will be dropped via ISteamInventory::TriggerItemDrop. Setting to zero will prevent any future drops of this item. See https://partner.steamgames.com/doc/features/inventory/schema#PlaytimeDrops",
      "minimum": 0
    },
    "drop_max_per_window": {
      "type": "number",
      "description": "Numbers of grants within the window permitted before Cool-down applies. See https://partner.steamgames.com/doc/features/inventory/schema#PlaytimeDrops",
      "minimum": 0
    },
    "drop_start_time": {
      "type": "string",
      "description": "UTC timestamp - prevent promo grants before this time, only applicable when promo = manual. See https://partner.steamgames.com/doc/features/inventory/schema#PromoItems",
      "pattern": "^\\d{8}T\\d{6}Z$"
    },
    "drop_window": {
      "type": "number",
      "description": "Elapsed time in minutes of a cool-down window before we will grant an item. See https://partner.steamgames.com/doc/features/inventory/schema#PlaytimeDrops",
      "minimum": 0
    },
    "exchange": {
      "type": "string",
      "description": "See https://partner.steamgames.com/doc/features/inventory/schema#ExchangeFormat",
      "examples": [
        "owns: <appid>",
        "ach: <achievement name>",
        "played: <appid>/<minutes played, defaults to 1>",
        "manual"
      ],
      "pattern": "^(?:(?:(\\d+(?:x\\d+)?|\\w+:\\w+(?:\\*\\d+)?),?)+;?)+[^,;]$"
    },
    "granted_manually": {
      "type": "boolean",
      "description": "If true, will only be granted when AddPromoItem() or AddPromoItems() are called with the explicit item definition id. Otherwise, it may be granted via the GrantPromoItems() call. Defaults to false."
    },
    "hidden": {
      "type": "boolean",
      "description": "If true, the item definition will not be shown to clients. Use this to hide unused, or under-development, itemdefs."
    },
    "icon_url": {
      "$ref": "#/$defs/url",
      "description": "The URL to the item's small icon. The URL should be publicly accessible because the Steam servers will download and cache. Recommended size is 200x200."
    },
    "icon_url_large": {
      "$ref": "#/$defs/url",
      "description": "The URL to the item's large image. The URL should be publicly accessible because the Steam servers will download and cache. Recommended size is 2048x2048."
    },
    "itemdefid": {
      "type": "number",
      "description": "The ID of this itemdef. This must be lower than 1,000,000 for non-workshop items.",
      "maximum": 999999,
      "minimum": 1
    },
    "marketable": {
      "type": "boolean",
      "description": "Whether this item can be sold to other users in the Steam Community Market."
    },
    "name_color": {
      "$ref": "#/$defs/color",
      "description": "The color to display the name in the inventory as 6 hex digits."
    },
    "price": {
      "type": "string",
      "description": "See https://partner.steamgames.com/doc/features/inventory/schema#SpecifyPrices",
      "pattern": "^1;(?:(?:\\d{8}T\\d{6}Z-\\d{8}T\\d{6}Z)?([A-Z]{3}\\d+,?)+;?)+$"
    },
    "price_category": {
      "type": "string",
      "description": "A preset price, where we handle the various currency values for you. See https://partner.steamgames.com/doc/features/inventory/schema#VlvPricing",
      "pattern": "^1;VLV(25|50|75|[1-9][05]0|1\\d00|[2-4][05]00|[5-9]000|10000)$"
    },
    "promo": {
      "type": "string",
      "description": "See https://partner.steamgames.com/doc/features/inventory/schema#PromoItems",
      "pattern": "^(?:(?:(owns:\\d+|ach:\\w+|played:\\d+(?:\/\\d+)?);?)+|manual)$"
    },
    "purchase_bundle_discount": {
      "type": "number",
      "description": "See https://partner.steamgames.com/doc/features/inventory/schema#SellingBundles",
      "maximum": 100,
      "minimum": 0
    },
    "store_hidden": {
      "type": "boolean",
      "description": "If true, this item will be hidden in the Steam Item Store for your app. By default, any items with a price will be shown in the store."
    },
    "store_images": {
      "type": "string",
      "description": "Image URLs delimited by \";\" character. These images will be proxied and used on the detail page of the Steam item store for your app."
    },
    "store_tags": {
      "type": "string",
      "description": "String with \"tags\" delimited by \";\" character. These tags will be used to categorize/filter items in the Steam item store for your app.",
      "pattern": "^(\\w+;?)+$"
    },
    "tag_generator_name": {
      "type": "string",
      "description": "Name of the tag category token. See https://partner.steamgames.com/doc/features/inventory/itemtags"
    },
    "tag_generator_values": {
      "type": "string",
      "description": "List of tag values and the chance that they will be picked. See https://partner.steamgames.com/doc/features/inventory/itemtags",
      "pattern": "^(\\w+(?::\\d+)?;?)+$"
    },
    "tag_generators": {
      "type": "string",
      "description": "List of tag_generator item definition ids to apply. See https://partner.steamgames.com/doc/features/inventory/itemtags",
      "pattern": "^(\\d+;?)+$"
    },
    "tags": {
      "type": "string",
      "description": "See https://partner.steamgames.com/doc/features/inventory/itemtags",
      "pattern": "^(\\w+:\\w+;?)+$"
    },
    "tradable": {
      "type": "boolean",
      "description": "Whether this item can be traded to other users using Steam Trading."
    },
    "type": {
      "type": "string",
      "description": "\"item\": An item type that can be found in a player inventory.\n\n\"bundle\": Represents a collection of ItemDefs, with an associated quantity of each type. When this item is granted, it automatically expands into the set of items configured in the bundle property.\n\n\"generator\": Represents a random item. Granting this item will randomly select one item type from the bundle property, and create an instance of that type. (For example: imagine when a crate is unlocked, then one of the possible items is created)\n\n\"playtimegenerator\": this is a special form of generator that can be granted by the ISteamInventory::TriggerItemDrop call from the application.\n\n\"tag_generator\": Special item definition that applies tags to item instances (see Steam Inventory Item Tags for more details).",
      "enum": [
        "bundle",
        "generator",
        "item",
        "playtimegenerator",
        "tag_generator"
      ]
    },
    "use_bundle_price": {
      "type": "boolean",
      "description": "See https://partner.steamgames.com/doc/features/inventory/schema#SellingBundles"
    },
    "use_drop_limit": {
      "type": "boolean",
      "description": " If true, then we rely on drop_limit to limit the items grant via ISteamInventory::TriggerItemDrop. See https://partner.steamgames.com/doc/features/inventory/schema#PlaytimeDrops"
    },
    "use_drop_window": {
      "type": "boolean",
      "description": "If true, we will use the \"drop_window\" for this itemdef. See https://partner.steamgames.com/doc/features/inventory/schema#PlaytimeDrops"
    }
  },
  "dependentSchemas": {
    "drop_start_time": {
      "properties": {
        "promo": {
          "const": "manual"
        }
      },
      "required": [
        "promo"
      ]
    },
    "drop_interval": {
      "properties": {
        "promo": {
          "const": "manual"
        }
      },
      "required": [
        "promo"
      ]
    },
    "drop_limit": {
      "properties": {
        "use_drop_limit": {
          "const": true
        }
      },
      "required": [
        "use_drop_limit"
      ]
    },
    "drop_max_per_window": {
      "properties": {
        "use_drop_window": {
          "const": true
        }
      },
      "required": [
        "use_drop_window"
      ]
    },
    "drop_window": {
      "properties": {
        "use_drop_window": {
          "const": true
        }
      },
      "required": [
        "use_drop_window"
      ]
    },
    "purchase_bundle_discount": {
      "oneOf": [
        {
          "required": [
            "price"
          ]
        },
        {
          "required": [
            "price_category"
          ]
        }
      ]
    },
    "use_bundle_price": {
      "oneOf": [
        {
          "required": [
            "price"
          ]
        },
        {
          "required": [
            "price_category"
          ]
        }
      ]
    }
  },
  "not": {
    "required": ["price", "price_category"]
  },
